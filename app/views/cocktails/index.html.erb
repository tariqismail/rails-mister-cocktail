<!-- Banner -->
<div class="banner">
  <div class="container">
    <div class="banner-logo mb-3">
      <%= image_tag 'logo.png', width: '200' %>
    </div>
    <h1 class="logo-text">Monsieur Mocktail</h1>
    <h2>Let's make super tasty mocktails</h2>
    <!-- <a class="btn btn-flat" href="#">I'm feeling lucky!</a> -->
  </div>
</div>
<!-- Mocktail Cards -->
<div class="cards p-4">
  <% @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
  <% if cocktail.photo.attached? %>
  <div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
  url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <% else %>
  <div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
  <% end %>
  <%= cocktail.name %>
</div>
<% end %>
<% end %>

</div>
