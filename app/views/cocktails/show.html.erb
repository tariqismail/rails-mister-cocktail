<% if @cocktail.photo.attached? %>
<div class="banner recipe-banner" style="background-image: linear-gradient(rgba(255,255,255,0.1), rgba(255,255,255,0.1)),
url('<%= cl_image_path @cocktail.photo.key %>')">
<% else %>
<div class="banner recipe-banner" style="background-image: linear-gradient(rgba(255,255,255,0.1), rgba(255,255,255,0.1))">
<% end %>
  <div class="container">
    <h1 class="logo-text"><%= @cocktail.name %></h1>
    <!-- <a class="btn btn-flat" href="#">I'm feeling lucky!</a> -->
  </div>
</div>
<div class="container p-3">
  <div class="recipe mt-4">
    <div class="recipe-title">
      <h3>Recipe</h3>
      <!--<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-success btn-xs' %> -->
    </div>
    <hr>
    <ul class="list-group">
      <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between align-items-center dose-item">
        <%= "#{dose.ingredient.name} - #{dose.description}" %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash-alt delete-icon"></i>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <div class="card p-4">
    <h5 class="card-title">Add an ingredient to <em><%= @cocktail.name %></em></h4>
      <div class="card-body">
        <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
      </div>
    </div>
  </div>
